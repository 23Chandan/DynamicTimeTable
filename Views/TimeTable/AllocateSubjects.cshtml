@model DynamicTimeTable.Models.SubjectAllocationModel

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Subject Allocation</h5>
        </div>
        <div class="card-body">
            <form method="post" id="subjectAllocationForm">
                <div class="row">
                    @for (int i = 0; i < Model.Subjects.Count; i++)
                    {
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Subject Name:</label>
                            <input asp-for="Subjects[i].SubjectName" type="text" class="form-control"  />
                            <span asp-validation-for="Subjects[i].SubjectName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Hours:</label>
                            <input asp-for="Subjects[i].Hours" type="number" class="form-control subject-hours" />
                            <span asp-validation-for="Subjects[i].Hours" class="text-danger"></span>
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Total Hours:</label>
                    <input readonly asp-for="TotalHours" id="totalHours" class="form-control" />
                    <span asp-validation-for="TotalHours" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Generate Timetable</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />    
}

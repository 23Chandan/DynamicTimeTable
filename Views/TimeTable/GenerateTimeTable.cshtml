@model DynamicTimeTable.Models.GeneratedTimeTableModel

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Generated Timetable</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            @for (int i = 0; i < Model.WorkingDays; i++)
                            {
                                <th>Day @(i + 1)</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in Model.Timetable)
                        {
                            <tr>
                                @foreach (var subject in row)
                                {
                                    <td>@subject</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
